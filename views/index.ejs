<script>
    const textToType = "Motivated Software Engineer with a solid foundation in systems engineering, full-stack development, and cloud infrastructure (AWS/Azure), experienced in building secure, scalable, and user-focused applications. Passionate about leveraging modern technologies to solve complex problems and deliver high-performance software solutions!";

  const typingElement = document.getElementById("typing-text");
  let charIndex = 0;
  const typingSpeed = 100; // milliseconds per character
  const delayBeforeRestart = 1500; // delay before restarting the loop

  function typeWriter() {
    if (charIndex < textToType.length) {
      typingElement.textContent += textToType.charAt(charIndex);
      charIndex++;
      setTimeout(typeWriter, typingSpeed);
    } else {
      // After typing finishes, pause, then restart
      setTimeout(() => {
        typingElement.textContent = "";
        charIndex = 0;
        typeWriter();
      }, delayBeforeRestart);
    }
  }

  window.onload = typeWriter();
</script>
